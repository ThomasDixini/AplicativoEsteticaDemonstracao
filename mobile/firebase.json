{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "_sitemap.html",
      "_sitemap.xml",
      "_sitemap.json"
    ],
    "headers": [
      {
        "source": "/firebase-messaging-sw.js",
        "headers": [
          { "key": "Content-Type", "value": "application/javascript" }
        ]
      }
    ],
    "rewrites": [
       {
        "source": "/firebase-messaging-sw.js",
        "destination": "/firebase-messaging-sw.js"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
